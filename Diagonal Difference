import Foundation

//https://www.hackerrank.com/challenges/diagonal-difference?h_r=profile

func diagonalDifference(arr: [[Int]]) -> Int {
    var d1 = 0
    var d2 = 0
    for i in 0...arr.count - 1 {
       let elementArray = arr[i]
       d1 = d1 + elementArray[i]
       d2 = d2 + elementArray[arr.count - 1 - i]
    }
        return abs(d1 - d2)
}
